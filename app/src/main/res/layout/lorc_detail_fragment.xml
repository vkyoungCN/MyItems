<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    >

    <LinearLayout
        android:id="@+id/sizeSettingLt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff176">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/LorC_name"
                android:textSize="20sp"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/ed_LorC_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tv_LorC_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/LorC_description"
                android:textSize="20sp"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/ed_LorC_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tv_LorC_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/loc_deg_lay_locdfg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:onClick="selectLocation">
                <ImageView
                    android:id="@+id/iv_deg_loc_locdfg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_edit_location_black_24dp"
                    android:scaleType="center"/>
                <TextView
                    android:id="@+id/loc_deg_tv_locdfg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/loc_no_designate"
                    android:lines="2"
                    android:maxLines="2"
                    />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/cat_deg_lay_locdfg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:onClick="selectCategory">

                <ImageView
                    android:id="@+id/iv_deg_cat_locdfg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_class_black_24dp"
                    android:scaleType="center"/>
                <TextView
                    android:id="@+id/cat_deg_tv_locdfg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/cat_no_designate"
                    android:lines="2"
                    android:maxLines="2"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#212121"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/back_lay_locdfg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:onClick="backToMain">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_keyboard_backspace_black_36dp"
                    android:scaleType="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_gravity="center_horizontal"
                    android:text="返回"
                    android:textSize="18sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/edit_lay_locdfg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:onClick="editLorC">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_mode_edit_black_36dp"
                    android:scaleType="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_gravity="center_horizontal"
                    android:text="编辑"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/delete_lay_locdfg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:onClick="deleteLorC">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_delete_forever_black_36dp"
                    android:scaleType="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_gravity="center_horizontal"
                    android:text="删除"
                    android:textSize="18sp"/>

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</FrameLayout>